<!doctype html>
<html data-ng-app="RoomListApp">
	<head>
		<title></title>
		<link href="~/Content/css/bootstrap.css" rel="stylesheet" />
		<script src="~/Content/js/jquery-2.1.4.min.js"></script>
		<script src="~/Content/js/bootstrap.min.js"></script>
		<script src="~/Content/js/angular.min.js"></script>
		<script src="~/Content/js/RoomList.js"></script>
	</head>
	<body>
	<h2>Room List</h2>
	<div data-ng-controller="RoomListController as roomList">
		<table id="example" class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Room #</th>
					<th>Name</th>
					<th>Time Slot</th>
					<th>Available</th>
				</tr>
			</thead>
 
			<tbody data-ng-repeat="room in roomList.Room">
				<tr>
					<td>{{room.RoomNumber}}</td>
					<td>{{room.Name}}</td>
					<td>{{room.TimeSlot}}</td>
                    <td>{{room.Reserved ? 'No' : 'Yes'}}</td>
				</tr>
			</tbody>
		</table>
	</div>
	</body>
</html>